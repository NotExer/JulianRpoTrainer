<section class="plans-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">PLANES DE ENTRENAMIENTO</h2>
            <p class="section-subtitle">
                Elige el plan que mejor se adapte a tus objetivos
            </p>
        </div>

        <div class="plans-grid">
            {
                plans.map((plan) => (
                    <article class="plan-card">
                        <div class="plan-header">
                            <h3 class="plan-title">{plan.title}</h3>
                        </div>

                        <div class="plan-content">
                            <div class="plan-section-block">
                                <h4 class="plan-subtitle">INCLUYE</h4>
                                <ul class="plan-list">
                                    {plan.includes.map((item) => (
                                        <li>{item}</li>
                                    ))}
                                </ul>
                            </div>

                            {plan.discounts && (
                                <div class="plan-section-block">
                                    <h4 class="plan-subtitle">
                                        DESCUENTOS EXCLUSIVOS
                                    </h4>
                                    <ul class="plan-list">
                                        {plan.discounts.map((item) => (
                                            <li>{item}</li>
                                        ))}
                                    </ul>
                                </div>
                            )}

                            <div class="plan-footer">
                                <a
                                    href="https://api.whatsapp.com/send?phone=573017821333&text=Hola%20Julián%2C%20Me%20gustaría%20conocer%20mas%20sobre%20tus%20servicios.%20mi%20nombre%20es%20%0A%20%20"
                                    target="_blank"
                                    class="btn-plan"
                                >
                                    CONSULTAR TARIFAS
                                </a>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>

<style>
    .plans-section {
        background: #000;
        position: relative;
        font-family:
            system-ui,
            -apple-system,
            sans-serif;
        box-sizing: border-box;
        width: 100%;
    }

    .plans-section * {
        box-sizing: border-box;
    }

    .container {
        margin: 0 auto;
        padding: 80px 20px;
    }

    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-title {
        font-size: 3rem;
        font-weight: 900;
        color: #fff;
        margin: 0 0 20px 0;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .section-subtitle {
        font-size: 1.2rem;
        color: #888;
        margin: 0;
        font-weight: 300;
    }

    .plans-grid {
        display: grid;
        grid-template-columns: 1fr; /* Mobile first */
        gap: 20px;
        margin-top: 40px;
    }

    @media (min-width: 768px) {
        .plans-grid {
            grid-template-columns: repeat(2, 1fr); /* Tablet */
            gap: 30px;
        }
    }

    @media (min-width: 1200px) {
        .plans-grid {
            grid-template-columns: repeat(4, 1fr); /* Desktop */
            gap: 20px;
        }
    }

    .plan-card {
        background: #111;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid #222;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .plan-card:hover {
        transform: translateY(-10px);
        border-color: #d3c588;
        box-shadow: 0 20px 40px rgba(255, 223, 100, 0.1);
    }

    .plan-header {
        background: #1a1a1a;
        padding: 20px;
        border-bottom: 1px solid #222;
        text-align: center;
        min-height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .plan-title {
        font-size: 1.2rem;
        font-weight: 800;
        color: #d3c588;
        margin: 0;
        letter-spacing: 1px;
        text-transform: uppercase;
        line-height: 1.3;
    }

    .plan-content {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .plan-section-block {
        margin-bottom: 10px;
    }

    .plan-subtitle {
        font-size: 0.9rem;
        font-weight: 700;
        color: #fff;
        margin: 0 0 10px 0;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 1px solid #333;
        padding-bottom: 5px;
        display: inline-block;
    }

    .plan-subtitle.highlight {
        color: #d3c588;
        border-color: #d3c588;
    }

    .plan-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .plan-list li {
        color: #ccc;
        margin-bottom: 8px;
        padding-left: 15px;
        position: relative;
        font-size: 0.85rem;
        line-height: 1.4;
    }

    .plan-list li::before {
        content: "•";
        color: #d3c588;
        position: absolute;
        left: 0;
        font-weight: bold;
    }

    .guarantee-text {
        color: #d3c588;
        font-weight: 700;
        font-size: 0.8rem;
        text-align: center;
        margin: 0;
    }

    .plan-footer {
        margin-top: auto;
        padding-top: 20px;
        border-top: 1px solid #222;
        text-align: center;
    }

    .btn-plan {
        background: #d3c588;
        color: #000;
        border: none;
        padding: 12px;
        font-size: 0.9rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        border-radius: 4px;
        width: 100%;
        text-decoration: none;
        display: block;
        text-align: center;
    }

    .btn-plan:hover {
        background: #fff;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 2rem;
        }
    }
</style>

<section class="relative w-full bg-black py-32 px-4 sm:px-6 lg:px-8 overflow-hidden">
    <!-- Background Decor -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-[#aba070]/5 blur-[120px] rounded-full -translate-y-1/2 pointer-events-none"></div>

    <div class="max-w-[1600px] mx-auto relative z-10">
        <div class="text-center mb-24">
            <h2 class="text-5xl md:text-8xl font-black text-white mb-6 tracking-tighter uppercase italic drop-shadow-2xl">
                MEMBRESÍAS <span class="text-[#aba070]">&</span> PLANES
            </h2>
            <div class="flex items-center justify-center gap-4">
                <div class="w-10 h-px bg-[#aba070]/50"></div>
                <p class="text-[#aba070] text-sm md:text-xl font-bold tracking-[0.4em] uppercase">ELEGANCIA EN TU ENTRENAMIENTO</p>
                <div class="w-10 h-px bg-[#aba070]/50"></div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {plans.map((plan) => (
                <article class="group relative flex flex-col h-full rounded-[3rem] bg-white/5 backdrop-blur-3xl border border-white/10 p-8 md:p-10 shadow-3xl transition-all duration-700 hover:-translate-y-4 hover:bg-white/10 hover:border-[#aba070]/50 overflow-hidden">
                    <!-- Hover Glow -->
                    <div class="absolute -inset-1 bg-gradient-to-b from-[#aba070]/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700 blur-3xl" />

                    <header class="relative mb-12 text-center">
                        <h3 class="text-xl md:text-2xl font-black text-white tracking-widest uppercase leading-tight italic">
                            {plan.title.split(' ').map((word, i) => i === 1 ? <span class="text-[#aba070]">{word} </span> : word + ' ')}
                        </h3>
                        <div class="w-16 h-1 bg-[#aba070] mx-auto mt-6 rounded-full transform transition-transform group-hover:scale-x-125 duration-700"></div>
                    </header>

                    <div class="relative flex-grow space-y-10">
                        <div>
                            <h4 class="text-xs font-black text-[#aba070] tracking-[0.5em] uppercase mb-6 opacity-80">INCLUYE</h4>
                            <ul class="space-y-4">
                                {plan.includes.map((item) => (
                                    <li class="flex items-start gap-3 text-gray-200 text-sm leading-relaxed font-light group/item">
                                        <div class="mt-1.5 w-1.5 h-1.5 rounded-full bg-[#aba070]/40 group-hover/item:bg-[#aba070] transition-colors" />
                                        <span>{item}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>

                        {plan.discounts && (
                            <div class="pt-8 border-t border-white/10 bg-white/5 -mx-10 px-10 pb-8">
                                <h4 class="text-xs font-black text-[#aba070] tracking-[0.5em] uppercase mb-4 text-center">BENEFICIOS EXTRA</h4>
                                <ul class="space-y-2">
                                    {plan.discounts.map((item) => (
                                        <li class="text-[11px] text-gray-400 leading-relaxed italic text-center font-medium uppercase tracking-wider">
                                            {item}
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        )}
                    </div>

                    <footer class="relative mt-auto pt-10">
                        <a
                            href="https://api.whatsapp.com/send?phone=573017821333"
                            target="_blank"
                            class="block w-full py-5 text-center bg-white text-black font-black text-xs tracking-[0.3em] uppercase rounded-2xl hover:bg-[#aba070] hover:text-white transition-all duration-500 shadow-2xl active:scale-95"
                        >
                            CONSULTAR TARIFAS
                        </a>
                    </footer>
                </article>
            ))}
        </div>
    </div>

    <!-- Bottom Decorative Orbs -->
    <div class="absolute bottom-0 right-0 w-[800px] h-[800px] bg-orange-500/5 blur-[150px] rounded-full translate-x-1/2 translate-y-1/2 pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-[#aba070]/5 blur-[150px] rounded-full -translate-x-1/2 translate-y-1/2 pointer-events-none"></div>

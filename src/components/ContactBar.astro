---
// components/OnlineCoaching.astro
---

<section class="online-coaching">
  <div class="overlay"></div>
  <div class="content">
    <h2>COACHING ONLINE</h2>
    <p>UNETE A LA COMUNIDAD FITNES MAS GRANDE DE MEDELLIN</p>
    <button class="enquire-btn">Hazlo</button>
  </div>
</section>

<style>
  .online-coaching {
    position: relative;
    width: 100%;
    height: 400px;
    background-image: url("/images/1.webp");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-bottom: 390px;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  /* Overlay con gradientes de colores */
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      rgba(200, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.7) 40%,
      rgba(0, 0, 0, 0.7) 60%,
      rgba(255, 140, 0, 0.5) 100%
    );
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: #fff;
    padding: 40px;
  }

  .content h2 {
    font-size: 56px;
    font-weight: 900;
    margin: 0 0 10px 0;
    letter-spacing: 2px;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    text-transform: uppercase;
  }

  .content p {
    font-size: 16px;
    letter-spacing: 2px;
    margin: 0 0 32px 0;
    text-transform: uppercase;
    font-weight: 400;
  }

  .enquire-btn {
    background: transparent;
    border: 1px solid #fff;
    color: #fff;
    padding: 12px 35px;
    font-size: 12px;
    font-weight: bold;
    letter-spacing: 2px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  .enquire-btn:hover {
    background: #fff;
    color: #000;
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .online-coaching {
      height: 300px;
      background-attachment: scroll;
      margin-bottom: 760px;
    }

    .content h2 {
      font-size: 32px;
    }

    .content p {
      font-size: 12px;
    }
  }
</style>

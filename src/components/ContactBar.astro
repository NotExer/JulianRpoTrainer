// components/OnlineCoaching.astro

---

<section class="online-coaching">
  <div class="overlay"></div>
  <div class="content">
    <h2>ENTRENAMIENTO ONLINE</h2>
    <p>UNETE A LA COMUNIDAD FITNES MAS GRANDE DE MEDELLIN </p>
    <button class="enquire-btn">Hazlo</button>
  </div>
</section>

<style>
  .online-coaching {
    position: relative;
    width: 100%;
    height: 400px;
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-bottom: 390px;
  }

  /* Overlay con gradientes de colores */
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      rgba(139, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(255, 165, 0, 0.6) 100%
    );
    z-index: 1;
    
  }

  .content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: #fff;
    padding: 40px;
  }

  .content h2 {
    font-size: 64px;
    font-weight: bold;
    margin: 0 0 16px 0;
    font-family: system-ui, -apple-system, sans-serif;
    letter-spacing: 2px;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
  }

  .content p {
    font-size: 16px;
    letter-spacing: 2px;
    margin: 0 0 32px 0;
    text-transform: uppercase;
    font-weight: 300;
  }

  .enquire-btn {
    background: transparent;
    border: 2px solid #fff;
    color: #fff;
    padding: 16px 40px;
    font-size: 14px;
    font-weight: bold;
    letter-spacing: 2px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }

  .enquire-btn:hover {
    background: #fff;
    color: #000;
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .online-coaching {
      height: 300px;
      background-attachment: scroll;
      margin-bottom: 590px;
    }

    .content h2 {
      font-size: 36px;
    }

    .content p {
      font-size: 12px;
    }

    .enquire-btn {
      padding: 12px 30px;
      font-size: 12px;
    }
  }
</style>
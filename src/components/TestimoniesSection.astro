---
import ContactBar from '../components/ContactBar.astro';
---

<section class="empower-section">
  <!-- Primera parte: Texto con fondo blanco -->
  <div class="empower-intro">
    <div class="logo">
      <img src="/images/logito.webp" alt="Empower" />
    </div>
    <h2>ESTE PROGRAMA ESTÁ ABIERTO A HOMBRES Y MUJERES<br>DE TODAS LAS EDADES Y ORÍGENES. ESTUDIANTES, COMPLETOS<br>PADRES CON POCO TIEMPO, PROFESIONALES OCUPADOS...</h2>
    <p class="highlight-text">
      ENTIENDO LO DIFÍCIL QUE PUEDE SER DAR LOS PRIMEROS PASOS HACIA TUS OBJETIVOS
    </p>
    <button class="video-btn">VER VIDEO DE INDUCCION</button>
  </div>

  <!-- Segunda parte: Grid con imagen y texto -->
  <div class="empower-content">



  </div>

  <!-- Tercera parte: Grid de transformaciones -->
  <div class="transformations-grid">
    <div class="transformation-item">
      <img src="/images/Testimonio1.jpeg" alt="Transformation 1" />
    </div>
    <div class="transformation-item">
      <img src="/images/Testimonio2.jpeg" alt="Transformation 2" />
    </div>
    <div class="transformation-item">
      <img src="/images/Testimonio3.jpeg" alt="Transformation 3" />
    </div>
    <div class="transformation-item">
      <img src="/images/Testimonio4.jpeg" alt="Transformation 4" />
    </div>
    <div class="transformation-item">
      <img src="/images/Testimonio5.jpeg" alt="Transformation 5" />
    </div>
    <div class="transformation-item">
      <img src="/images/Testimonio6.jpeg" alt="Transformation 6" />

    </div>
  </div>
</section>
<ContactBar />

<style>
  .empower-section {
    width: 100%;
    background: #fff;
  }

  /* Intro con fondo blanco */
  .empower-intro {
    background: linear-gradient(135deg, #222 0%, #111 100%);
    padding: 80px 40px;
    text-align: center;
  }

  .logo {
    margin-bottom: 40px;
  }

  .logo img {
    height: 60px;
   transition: ease 0.3s;
}

    .logo img:hover {
    transform: scale(1.2);
  }
  .empower-intro h2 {
    font-size: 24px;
    font-weight: bold;
    line-height: 1.6;
    color: #fff;
    margin: 0 0 30px 0;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .highlight-text {
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    margin: 0 0 40px 0;
    line-height: 1.6;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .video-btn {
    background: #000;
    color: #fff;
    border: none;
    padding: 16px 40px;
    font-size: 14px;
    font-weight: bold;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }

  .video-btn:hover {
    background: #333;
    transform: scale(1.05);
  }

  /* Grid con coaches */
  .empower-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: #000;
  }

  .coaches-image {
    position: relative;
    background: #000;
    padding: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
  }

  .coach-card {
    text-align: center;
  }

  .coach-card img {
    width: 200px;
    height: 300px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .coach-info h3 {
    color: #fff;
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 8px 0;
    letter-spacing: 1px;
  }

  .coach-info p {
    color: #999;
    font-size: 14px;
    margin: 0;
    letter-spacing: 1px;
  }

  .empower-text {
    background: #000;
    color: #fff;
    padding: 80px 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .empower-text h3 {
    font-size: 32px;
    font-weight: bold;
    margin: 0 0 24px 0;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .empower-text p {
    font-size: 16px;
    line-height: 1.8;
    margin: 0 0 32px 0;
    color: #ccc;
  }

  .empower-text h4 {
    font-size: 20px;
    font-weight: bold;
    margin: 0 0 16px 0;
  }

  .empower-text ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .empower-text li {
    font-size: 16px;
    line-height: 2;
    color: #ccc;
  }

  .empower-text li::before {
    content: "✓ ";
    color: #4CAF50;
    font-weight: bold;
    margin-right: 8px;
  }

  /* Grid de transformaciones */
  .transformations-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 0;
    background-color: #000;
  }

  .transformation-item {
    position: relative;
    overflow: hidden;
    aspect-ratio: 3/4;
    margin: 5px;

    
  }

  .transformation-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .transformation-item:hover img {
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .empower-content {
      grid-template-columns: 1fr;
    }

    .coaches-image {
      flex-direction: column;
      padding: 40px;
    }

    .transformations-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .empower-intro {
      padding: 60px 20px;
    }

    .empower-intro h2 {
      font-size: 18px;
    }

    .highlight-text {
      font-size: 14px;
    }

    .empower-text {
      padding: 40px 20px;
    }

    .empower-text h3 {
      font-size: 24px;
    }

    .transformations-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .coach-card img {
      width: 150px;
      height: 225px;
    }
  }
</style>
---

<section
  class="relative w-full bg-[#050505] py-24 px-4 sm:px-6 lg:px-8 overflow-hidden"
>
  <!-- Intro Card -->
  <div class="max-w-7xl mx-auto mb-24 relative z-10">
    <div
      class="p-10 md:p-20 rounded-[3rem] bg-white/5 backdrop-blur-3xl border border-white/10 text-center shadow-3xl"
    >
      <div
        class="mb-10 inline-block p-4 rounded-3xl bg-white/5 border border-white/10"
      >
        <img
          src="/images/logito.webp"
          alt="Logo Julián Rpo Trainer"
          class="h-20 w-auto"
          loading="lazy"
        />
      </div>
      <h2
        class="text-3xl md:text-5xl font-black text-white mb-6 leading-tight tracking-tighter uppercase"
      >
        ESTE PROGRAMA ESTÁ ABIERTO A HOMBRES Y MUJERES<br
          class="hidden md:block"
        /> DE TODAS LAS EDADES Y ORÍGENES.
      </h2>
      <p
        class="text-[#aba070] text-lg font-bold tracking-[0.3em] mb-12 uppercase"
      >
        RESULTADOS REALES, PERSONAS REALES. TU CAMBIO COMIENZA AQUÍ.
      </p>
      <a
        href="https://api.whatsapp.com/send?phone=573017821333&text=Hola%20Julián%2C%20Me%20gustaría%20conocer%20mas%20sobre%20tus%20servicios.%20mi%20nombre%20es%20%0A%20%20"
        class="inline-block px-12 py-5 bg-white text-black font-black text-sm tracking-widest uppercase rounded-full hover:bg-[#aba070] hover:text-white transition-all duration-300 transform hover:-translate-y-2 shadow-2xl shadow-white/10"
      >
        EMPEZAR AHORA
      </a>
    </div>
  </div>

  <!-- Image Testimonials -->
  <div class="max-w-[1600px] mx-auto mb-24 relative z-10">
    <div class="text-center mb-12">
      <h3
        class="text-3xl md:text-5xl lg:text-7xl font-black text-white/40 tracking-tight uppercase select-none"
      >
        TRANSFORMACIONES
      </h3>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
      {
        imageTestimonials.map((item) => (
          <div class="group relative aspect-[3/4] rounded-2xl overflow-hidden cursor-pointer border border-white/10 shadow-xl transition-all duration-500 hover:scale-[1.05] hover:z-20 hover:shadow-2xl hover:shadow-[#aba070]/20">
            <img
              src={item.image}
              alt={`Testimonio de cliente ${item.id}`}
              class="w-full h-full object-cover brightness-75 group-hover:brightness-100 transition-all duration-700"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 flex items-end p-6">
              <p class="text-white text-xs font-medium leading-relaxed italic border-l-2 border-[#aba070] pl-3">
                "{item.comment}"
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Video Testimonials -->
  <div
    class="relative w-full bg-white/5 backdrop-blur-3xl py-24 px-4 sm:px-6 lg:px-8 border-y border-white/10"
  >
    <div class="max-w-[1600px] mx-auto relative z-10">
      <div class="text-center mb-16">
        <h3
          class="text-4xl md:text-6xl font-black text-white tracking-tighter uppercase mb-4"
        >
          TESTIMONIOS EN VIDEO
        </h3>
        <div class="w-24 h-1 bg-[#aba070] mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
        {
          videoTestimonials.map((item) => (
            <div class="yt-facade group relative aspect-[9/16] rounded-[2rem] overflow-hidden bg-black shadow-3xl border border-white/5 hover:border-[#aba070]/50 transition-all duration-500 hover:-translate-y-4 cursor-pointer" data-yt-id={item.id}>
              <img
                src={`https://img.youtube.com/vi/${item.id}/hqdefault.jpg`}
                alt={`Video testimonio del cliente ${item.id}`}
                class="w-full h-full object-cover"
                loading="lazy"
              />
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                </div>
              </div>
              <div class="absolute inset-x-0 bottom-0 p-6 bg-gradient-to-t from-black via-black/80 to-transparent pointer-events-none">
                <p class="text-white text-[10px] leading-relaxed italic font-light drop-shadow-md">
                  "{item.comment}"
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Background highlights -->
  <div
    class="absolute top-0 right-0 w-[1000px] h-[1000px] bg-[#aba070]/5 blur-[200px] rounded-full -translate-y-1/2 translate-x-1/2 pointer-events-none"
  >
  </div>
</section>

<script>
  document.querySelectorAll('.yt-facade').forEach((el) => {
    el.addEventListener('click', () => {
      const id = el.getAttribute('data-yt-id');
      const iframe = document.createElement('iframe');
      iframe.src = `https://www.youtube-nocookie.com/embed/${id}?autoplay=1`;
      iframe.className = 'w-full h-full object-cover';
      iframe.frameBorder = '0';
      iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share';
      iframe.allowFullscreen = true;
      el.innerHTML = '';
      el.appendChild(iframe);
    }, { once: true });
  });
</script>


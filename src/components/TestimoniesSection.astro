</section>

<style>
  .empower-section {
    background: #050505;
    color: #fff;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    box-sizing: border-box;
    width: 100%;
  }

  .empower-section * {
    box-sizing: border-box;
  }

  /* Intro */
  .empower-intro {
    background: linear-gradient(to bottom, #000000, #111111);
    padding: 100px 20px;
    text-align: center;
    width: 100%;
  }

  .logo img {
    height: 90px;
    margin-bottom: 30px;
    filter: drop-shadow(0 0 10px rgba(211, 197, 136, 0.3));
  }

  .empower-intro h2 {
    font-size: 1.8rem;
    font-weight: 700;
    line-height: 1.4;
    color: #fff;
    margin: 0 auto 20px;
    max-width: 800px;
    letter-spacing: 1px;
  }

  .highlight-text {
    font-size: 1rem;
    font-weight: 600;
    color: #d3c588;
    margin-bottom: 40px;
    letter-spacing: 1px;
  }

  .btn-buy {
    background: #d3c588;
    color: #000;
    border: none;
    padding: 15px 40px;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    border-radius: 4px;
    text-decoration: none;
    display: inline-block;
  }

  .btn-buy:hover {
    background: #fff;
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(211, 197, 136, 0.4);
  }

  /* Section Titles */
  .section-title {
    text-align: center;
    font-size: 3rem;
    font-weight: 900;
    color: #fff;
    margin: 80px 0 50px;
    text-transform: uppercase;
    letter-spacing: -1px;
    position: relative;
    display: inline-block;
    width: 100%;
  }

  .section-title::after {
    content: "";
    display: block;
    width: 60px;
    height: 3px;
    background: #d3c588;
    margin: 20px auto 0;
  }

  /* Image Grid - Masonry/Gallery Style */
  .testimonials-container {
    padding: 0 20px 80px;
    width: 100%;
    max-width: none;
    margin: 0;
  }

  .transformations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
  }

  .testimonial-card {
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    background: #111;
    aspect-ratio: 3/4; /* Consistent portrait ratio */
    cursor: pointer;
  }

  .image-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    filter: grayscale(20%);
  }

  .testimonial-card:hover .image-wrapper img {
    transform: scale(1.08);
    filter: grayscale(0%);
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 30px 20px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    transform: translateY(100%);
    transition: transform 0.4s ease;
    display: flex;
    align-items: flex-end;
  }

  .testimonial-card:hover .overlay {
    transform: translateY(0);
  }

  .overlay-comment {
    color: #fff;
    font-size: 0.95rem;
    line-height: 1.5;
    font-weight: 500;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    margin: 0;
    border-left: 3px solid #d3c588;
    padding-left: 15px;
  }

  /* Video Grid - TikTok Style */
  .videos-container {
    background-color: #111;
    padding: 60px 20px 100px;
    width: 100%;
    max-width: none;
    margin: 0;
  }

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    justify-content: center;
    max-width: 1600px;
    margin: 0 auto;
  }

  .video-card {
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    aspect-ratio: 9/16;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
    background: #000;
  }

  .video-card:hover {
    transform: translateY(-10px);
  }

  .video-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .video-wrapper iframe {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-overlay-static {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    pointer-events: none; /* Allow clicking on the video */
  }

  .video-comment {
    color: #fff;
    font-size: 0.9rem;
    line-height: 1.4;
    margin: 0;
    font-style: italic;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .transformations-grid {
      gap: 15px;
    }

    .testimonial-card {
      aspect-ratio: 4/5;
    }

    .overlay {
      transform: translateY(0); /* Always show comment on mobile */
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.8) 0%,
        rgba(0, 0, 0, 0.6) 50%,
        transparent 100%
      );
    }

    .videos-grid {
      grid-template-columns: repeat(auto-fill, minmax(45%, 1fr));
      gap: 15px;
    }
  }
</style>

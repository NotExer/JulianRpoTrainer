---
interface Props {
  imageUrl: string;
  title?: string; // Opcional con valor por defecto
}
const { imageUrl, title = "" } = Astro.props;
---

<div class="mi-banner">
  <slot /> 
  <h1>{title}</h1>
</div>

<style define:vars={{ imageUrl }}>

h1 {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    position: relative;
    color: white;
    font-size: 3rem; 
    font-weight: 800;
    max-width: 1200px;
    line-height: 0.8;
    z-index: 2;
    margin: 0;
    padding: 0 1rem;
}

/* Para pantallas medianas (ej. tablets) */
@media (min-width: 768px) {
    h1 {
        font-size: 4rem; /* Tamaño intermedio */
    }
}

/* Para pantallas grandes (ej. escritorios) */
@media (min-width: 1200px) {
    h1 {
        font-size: 7rem; /* Tu tamaño original grande */
    }
}

  .mi-banner {
    position: fixed;
    top: 0;
    left: 0;
    min-height: 900px; 
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    z-index: 1;

  }
  
  /* Imagen de fondo */
  .mi-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: var(--imageUrl);
    background-size: cover; 
    background-position: center; 
    background-repeat: no-repeat;
    z-index: 1;
    filter: brightness(0.6);
  }

  /* Control de imagen en móviles */
  @media (max-width: 768px) {
    .mi-banner::before {
      background-position: 75% 10%;
      background-size: cover;
    }
  }

</style>
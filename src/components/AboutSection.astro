---
// components/AboutSection.astro
---

<section
  class="relative w-full bg-black py-20 px-4 sm:px-6 lg:px-8 overflow-hidden"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Card 1 -->
      <div
        class="group relative aspect-[16/9] md:aspect-auto md:h-[500px] rounded-[3rem] overflow-hidden border border-white/10 shadow-2xl transition-all duration-700 hover:scale-[1.02]"
      >
        <div
          class="absolute inset-0 bg-cover bg-center transition-transform duration-1000 group-hover:scale-110"
          style="background-image: url('/images/3.webp')"
        >
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"
        >
        </div>
        <div
          class="absolute inset-x-0 bottom-0 p-10 md:p-14 text-center md:text-left"
        >
          <h3
            class="text-3xl md:text-4xl font-black text-white mb-6 uppercase tracking-tighter drop-shadow-lg"
          >
            TIENES DUDAS?
          </h3>
          <a
            href="https://calendly.com/julianrpotrainer/resolviendo-dudas-de-entrenamiento-y-nutricion?month=2025-12"
            target="_blank"
            class="inline-block px-10 py-4 bg-white/10 backdrop-blur-md border border-white/20 text-white font-black text-xs tracking-widest uppercase rounded-2xl hover:bg-white hover:text-black transition-all duration-300 shadow-xl"
          >
            PEDIR ASESORIA
          </a>
        </div>
      </div>

      <!-- Card 2 -->
      <div
        class="group relative aspect-[16/9] md:aspect-auto md:h-[500px] rounded-[3rem] overflow-hidden border border-white/10 shadow-2xl transition-all duration-700 hover:scale-[1.02]"
      >
        <div
          class="absolute inset-0 bg-cover bg-center transition-transform duration-1000 group-hover:scale-110"
          style="background-image: url('/images/5.webp')"
        >
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"
        >
        </div>
        <div
          class="absolute inset-x-0 bottom-0 p-10 md:p-14 text-center md:text-left"
        >
          <h3
            class="text-3xl md:text-4xl font-black text-white mb-6 uppercase tracking-tighter drop-shadow-lg"
          >
            ENFÓCATE EN TUS OBJETIVOS
          </h3>
          <a
            href="https://api.whatsapp.com/send?phone=573017821333&text=Hola%20Julián%2C%20Me%20gustaría%20conocer%20mas%20sobre%20tus%20servicios.%20mi%20nombre%20es%20%0A%20%20"
            target="_blank"
            class="inline-block px-10 py-4 bg-[#aba070] text-white font-black text-xs tracking-widest uppercase rounded-2xl hover:bg-white hover:text-black transition-all duration-300 shadow-xl"
          >
            UNIRSE AL PROGRAMA
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative blur -->
  <div
    class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-[#aba070]/5 blur-[120px] rounded-full translate-y-1/2 pointer-events-none"
  >
  </div>
</section>


<script type="text/javascript">
  const scrollToTopBtn = document.getElementById("scrollToTop");
  const footer = document.querySelector(".footer");

  // Scroll suave al hacer clic
  scrollToTopBtn?.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });

  // Función para actualizar z-index del footer según el scroll
  function updateFooterZIndex() {
    const scrollPosition = window.scrollY;
    const windowHeight = window.innerHeight;
    const documentHeight = document.documentElement.scrollHeight;
    const scrollPercentage =
      (scrollPosition / (documentHeight - windowHeight)) * 100;

    // Cambiar z-index cuando se supera el 50% del scroll
    if (scrollPercentage > 50) {
      footer?.style.setProperty("z-index", "10");
    } else {
      footer?.style.setProperty("z-index", "0");
    }

    // Mostrar/ocultar el botón de scroll to top
    if (window.scrollY > 300) {
      scrollToTopBtn?.classList.add("visible");
    } else {
      scrollToTopBtn?.classList.remove("visible");
    }
  }

  // Escuchar el evento de scroll
  window.addEventListener("scroll", updateFooterZIndex);

  // Ejecutar al cargar la página
  updateFooterZIndex();
</script>

<style>
  .footer {
    background-color: #000;
    padding: 3rem 1.5rem;
    position: relative;
    width: 100%;
    z-index: 10;
    box-sizing: border-box;
  }

  @media (min-width: 768px) {
    .footer:not(.static-position) {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      width: auto;
    }
  }

  .footer.static-position {
    position: relative;
    z-index: 1;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Grid Layout */
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-brand {
      align-items: flex-start;
      text-align: left;
    }
  }

  .footer-logo {
    margin-bottom: 1rem;
  }

  .logo-svg {
    width: 4rem;
    height: 4rem;
  }

  .logo img {
    height: 60px;
    width: auto;
    transition: ease 0.3s;
  }

  .brand-name {
    color: #fff;
    font-size: 1.25rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-weight: 600;
  }

  /* Links */
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-links {
      align-items: flex-start;
      text-align: left;
    }
  }

  .footer-links h3 {
    color: #fff;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-family: system-ui, sans-serif;
  }

  .footer-links p {
    color: #fff;
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0;
    font-family: system-ui, sans-serif;
  }

  .footer-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  .footer-link:hover {
    color: #fff;
  }

  /* Social Media */
  .social-media {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .social-media {
      justify-content: flex-end;
    }
  }

  .social-link {
    color: #9ca3af;
    transition: color 0.3s ease;
  }

  .social-link:hover {
    color: #fff;
  }

  .social-icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Bottom Bar */
  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid #374151;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .copyright,
  .credits {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: #fff;
  }

  .credits-link {
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .credits-link:hover {
    color: #fff;
  }

  /* Scroll to Top Button */
  .scroll-top {
    background: none;
    border: none;
    color: #9ca3af;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
    opacity: 0.6;
    transform: translateY(0);
  }

  .scroll-top:hover {
    color: #fff;
    opacity: 1;
    transform: translateY(-4px);
  }

  .scroll-top:active {
    transform: translateY(-2px);
  }

  .scroll-top.visible {
    animation: fadeInUp 0.5s ease;
  }

  .scroll-icon {
    width: 1.5rem;
    height: 1.5rem;
    animation: bounce 2s infinite;
  }

  .scroll-top:hover .scroll-icon {
    animation: bounceHover 0.6s ease;
  }

  /* Animaciones */
  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-8px);
    }
    60% {
      transform: translateY(-4px);
    }
  }

  @keyframes bounceHover {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 0.6;
      transform: translateY(0);
    }
  }

  @media (min-width: 768px) {
    .scroll-top {
      margin-top: 0;
    }
  }

  @media (max-width: 767px) {
    .scroll-top {
      margin-top: 1rem;
    }
  }
</style>

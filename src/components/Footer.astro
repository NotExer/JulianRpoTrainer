      <!-- Scroll to top button -->
      <button id="scrollToTop" class="scroll-top" aria-label="Scroll to top">
        <svg
          class="scroll-icon"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"

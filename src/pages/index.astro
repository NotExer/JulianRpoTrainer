---
import Navbar from "../components/navbar.astro";
import BackgroundImage from "../components/banner.astro";
import Footer from "../components/Footer.astro";
const fondoPrincipal = `url('/images/4.webp')`;
import ContactBar from "../components/ContactBar.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
import MotivationSection from "../components/MotivationSection.astro";
import IntroPart1 from "../components/IntroPart1.astro";
import IntroPart2 from "../components/IntroPart2.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/images/logito.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Julián Restrepo | Entrenamiento Personal y Nutrición Real</title>
    <meta
      name="description"
      content="Transforma tu vida con Julián Restrepo. Entrenamiento personal y nutrición personalizada basada en ciencia para hombres y mujeres. Resultados reales y duraderos."
    />
  </head>
  <body style="margin:0; background:#111;">
    <Navbar />

    <BackgroundImage
      imageUrl={fondoPrincipal}
      title="EL CAMBIO NO SE ESPERA SE ENTRENA"
    />

    <!-- Spacer que se ajusta dinámicamente -->
    <div class="scroll-spacer" id="scrollSpacer"></div>

    <!-- Wrapper del contenido que aparecerá sobre el banner -->
    <div class="content-wrapper">
      <IntroPart1 />
      <IntroPart2 />
      <MotivationSection />
      <ContactBar />
    </div>

    <Footer />
    <SmoothScroll />
  </body>
</html>

<style>
  html {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }

  .scroll-spacer {
    height: 900px; /* Altura inicial que coincide con min-height del banner */
    pointer-events: none;
  }

  .content-wrapper {
    position: relative;
    z-index: 100;
    width: 100%;
    background: #000;
    box-sizing: border-box;
  }
</style>

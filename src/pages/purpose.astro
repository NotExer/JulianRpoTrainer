---
import Navbar from "../components/navbar.astro";
import BackgroundImage from "../components/banner.astro";
import Footer from "../components/Footer.astro";
const fondoPrincipal = `url('/images/3.webp')`;
import PurposeSection from "../components/PurposeSection.astro";
import MotivationSection from "../components/MotivationSection.astro";
import ContactBar from "../components/ContactBar.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/images/logito.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Mi Propósito | Julián Restrepo - Transformación con Sentido</title>
    <meta
      name="description"
      content="Descubre por qué hago lo que hago. Mi propósito es guiarte hacia una versión más fuerte y disciplinada de ti mismo, integrando hábitos reales."
    />
  </head>
  <body
    style="margin:0; background:#111; font-family: system-ui, -apple-system, sans-serif;"
  >
    <Navbar />

    <BackgroundImage imageUrl={fondoPrincipal} title="MI PROPÓSITO " />

    <!-- Spacer que se ajusta dinámicamente -->
    <div class="scroll-spacer" id="scrollSpacer"></div>

    <!-- Wrapper del contenido que aparecerá sobre el banner -->
    <div class="content-wrapper">
      <PurposeSection />
      <MotivationSection />
      <ContactBar />
    </div>

    <Footer />
    <SmoothScroll />
  </body>
</html>

<style>
  html {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }

  .scroll-spacer {
    height: 900px; /* Altura inicial que coincide con min-height del banner */
    pointer-events: none;
  }

  .content-wrapper {
    position: relative;
    z-index: 100;
    background: #000;
    width: 100%;
    box-sizing: border-box;
  }
</style>

---
import Navbar from "../components/navbar.astro";
import BackgroundImage from "../components/banner.astro";
import Footer from "../components/Footer.astro";
const fondoPrincipal = `url('/images/6.webp')`;
import ConsultationsSection from "../components/ConsultationsSection.astro";

import ContactBar from "../components/ContactBar.astro";
import MotivationSection from "../components/MotivationSection.astro";
import AboutSection from "../components/AboutSection.astro";
import AboutBio from "../components/AboutBio.astro";
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/images/logito.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preload" href="/images/6.webp" as="image" />
    <title>Sobre Mí | Julián Restrepo - Coach Personal en Medellín</title>
    <meta
      name="description"
      content="Conoce a Julián Restrepo, coach con más de 10 años de experiencia transformando vidas a través del entrenamiento inteligente y la nutrición flexible."
    />
  </head>
  <body style="margin:0; background:#111;">
    <Navbar />

    <BackgroundImage
      imageUrl={fondoPrincipal}
      title="CONOCE EL VERDADERO CAMBIO "
    />

    <!-- Spacer que se ajusta dinámicamente -->
    <div class="scroll-spacer" id="scrollSpacer"></div>

    <!-- Wrapper del contenido que aparecerá sobre el banner -->
    <div class="content-wrapper">
      <AboutBio />
      <AboutSection />
      <MotivationSection />
      <ContactBar />
    </div>
    <Footer />
  </body>
</html>

<style>
  html {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }

  .scroll-spacer {
    height: 100vh;
    pointer-events: none;
  }

  .content-wrapper {
    position: relative;
    z-index: 100;
    background: #000;
    width: 100%;
    box-sizing: border-box;
  }
</style>

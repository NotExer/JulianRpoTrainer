---
import Navbar from "../components/navbar.astro";
import BackgroundImage from "../components/banner.astro";
import Footer from "../components/Footer.astro";
const fondoPrincipal = `url('/images/2.webp')`;
import EbooksSection from "../components/EbooksSection.astro";
import ContactBar from "../components/ContactBar.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/images/logito.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>E-books y Recursos | Julián Restrepo - Educación Fitness</title>
    <meta
      name="description"
      content="Potencia tu entrenamiento con mis E-books exclusivos. Guías de suplementación, rutinas y nutrición para que aprendas a entrenar con propósito."
    />
  </head>
  <body style="margin:0; background:#111;">
    <Navbar />

    <BackgroundImage
      imageUrl={fondoPrincipal}
      title="EL CAMBIO NO SOLO ES FISICO"
    />

    <!-- Spacer que se ajusta dinámicamente -->
    <div class="scroll-spacer" id="scrollSpacer"></div>

    <!-- Wrapper del contenido que aparecerá sobre el banner -->
    <div class="content-wrapper">
      <EbooksSection />
      <ContactBar />
    </div>

    <Footer />
    <SmoothScroll />
  </body>
</html>

<style>
  html {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }

  .scroll-spacer {
    height: 100vh;
    pointer-events: none;
  }

  .content-wrapper {
    position: relative;
    z-index: 100;
    background: #000;
    width: 100%;
    box-sizing: border-box;
  }
</style>

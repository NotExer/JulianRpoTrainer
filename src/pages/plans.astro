---
import Navbar from "../components/navbar.astro";
import BackgroundImage from "../components/banner.astro";
import Footer from "../components/Footer.astro";
const fondoPrincipal = `url('/images/2.webp')`;
import PlansSection from "../components/PlansSection.astro";
import ContactBar from "../components/ContactBar.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/images/logito.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>JulianRpoTrainer</title>
  </head>
  <body style="margin:0; background:#111; overflow-x: hidden;">
    <Navbar />

    <BackgroundImage
      imageUrl={fondoPrincipal}
      title="EL CAMBIO NO SE ESPERA SE ENTRENA"
    />

    <!-- Spacer que se ajusta dinámicamente -->
    <div class="scroll-spacer" id="scrollSpacer"></div>

    <!-- Wrapper del contenido que aparecerá sobre el banner -->
    <div class="content-wrapper">
      <PlansSection />
      <ContactBar />
    </div>

    <Footer />
    <SmoothScroll />
  </body>
</html>

<style>
  html {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .scroll-spacer {
    height: 900px; /* Altura inicial que coincide con min-height del banner */
    pointer-events: none;
  }

  .content-wrapper {
    position: relative;
    z-index: 100;
    width: 100%;
    background: #000;
    box-sizing: border-box;
  }
</style>

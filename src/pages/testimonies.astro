---
import Navbar from "../components/navbar.astro";
import BackgroundImage from "../components/banner.astro";
import Footer from "../components/Footer.astro";
const fondoPrincipal = `url('/images/5.webp')`;

import TestimoniesSection from "../components/TestimoniesSection.astro";
import MotivationSection from "../components/MotivationSection.astro";
import ContactBar from "../components/ContactBar.astro";
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/images/logito.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Testimonios | Resultados Reales de Clientes - Julián Restrepo</title>
    <meta
      name="description"
      content="Mira las transformaciones reales de mis clientes. Testimonios en video e imagen que avalan mi metodología de entrenamiento y nutrición."
    />
  </head>
  <body style="margin:0; background-color: #000; overflow-x: hidden;">
    <Navbar />

    <BackgroundImage
      imageUrl={fondoPrincipal}
      title="CONOCE EL VERDADERO CAMBIO"
    />

    <!-- Spacer que se ajusta dinámicamente -->
    <div class="scroll-spacer" id="scrollSpacer"></div>

    <!-- Wrapper del contenido que aparecerá sobre el banner -->
    <div class="content-wrapper">
      <TestimoniesSection />
      <MotivationSection />
      <ContactBar />
    </div>
    <Footer />
  </body>
</html>

<style>
  html {
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .scroll-spacer {
    height: 100vh;
    pointer-events: none;
  }

  .content-wrapper {
    position: relative;
    z-index: 100;
    width: 100%;
    background: #000;
  }
</style>

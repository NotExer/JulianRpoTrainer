---
import Navbar from "../components/navbar.astro";
import Footer from "../components/Footer.astro";
import CheckoutSection from "../components/CheckoutSection.astro";
import SmoothScroll from "../components/SmoothScroll.astro";
import "../styles/global.css";
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/webp" href="/images/logito.webp" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Finalizar Compra | Julián Restrepo</title>
        <meta
            name="description"
            content="Completa tu pedido de forma segura y comienza tu transformación."
        />
    </head>
    <body style="margin:0; background:#000;">
        <Navbar />

        <CheckoutSection />

        <Footer isFixed={false} />
        <SmoothScroll />
    </body>
</html>

<style>
    html {
        margin: 0;
        padding: 0;
        width: 100%;
    }

    body {
        margin: 0;
        padding: 0;
        width: 100%;
        overflow-x: hidden;
    }
</style>
